!!!5

%html.no-js{:lang => "en"}
  = render 'layouts/interfaces/partials/head'
  %body
    .off-canvas-wrap
      .main-wrap
        = interfaces_header do
          %li.divider
          %li
            %a{ :href => "/organization"}
              %span.icon.interfaces-services{"aria-hidden" => "true"}
              %span.btn-label
                Organization
          %li.divider
          %li
            %a{ :href => "/subscriptions"}
              %span.icon.interfaces-resources{"aria-hidden" => "true"}
              %span.btn-label
                Applications
          %li.divider
          %li
            %a{ :href => "/payment_method"}
              %span.icon.interfaces-projector{"aria-hidden" => "true"}
              %span.btn-label
                Payment Options
          %li.divider

        -#content
        .main-content-block.inner-wrap
          %section.main-section
            .main-section__inner
              ~ yield
          %aside.sidebar.left-off-canvas
            = render "layouts/interfaces/partials/sidebar"

    -#End content
    = interfaces_footer do
      %span Designed in CA \
      %span.pco-ui-pco{ "aria-hidden" => "true"} \
      %span Copyright 2013

    -# Scripts
    = javascript_include_tag "application"
    = javascript_include_tag "interfaces/interfaces"
