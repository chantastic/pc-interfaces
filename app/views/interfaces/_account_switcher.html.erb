    <%= react_component "ConnectedPersonMenuContainer",
                        {
                          currentPersonAccountCenterId: interfaces_person.account_center_id,
                          currentPersonId: interfaces_person.id,
                          currentPersonName: interfaces_person.name,
                          currentPersonOrganizationName: interfaces_organization.name,
                          currentPersonProfilePath: profile_path,
                          railsAppName: current_app,
                          railsEnv: Rails.env
                        } %>
  </div>
</div>
