<div
  class="account-switcher_container"
  onclick="$(this).closest('.user-badge').toggleClass('is-expanded')">
  <div class="account-switcher">
    <%= react_component "ConnectedPersonMenuContainer",
                        {
                          currentPersonAccountCenterId: Person.current.account_center_id,
                          currentPersonId: Person.current.id,
                          currentPersonName: Person.current.name,
                          currentPersonOrganizationName: Person.current.organization.name,
                          currentPersonProfilePath: profile_path,
                          railsAppName: current_app,
                          railsEnv: Rails.env
                        } %>
  </div>
</div>
